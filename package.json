{
	"name": "rekisteri",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e",
		"db:start": "docker compose up",
		"db:reset": "docker compose down -v",
		"db:push": "drizzle-kit push",
		"db:push:force": "drizzle-kit push --force",
		"db:seed": "tsx --env-file=.env src/lib/server/db/seed.ts",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"i18n:validate": "inlang validate --project project.inlang",
		"i18n:lint": "inlang lint --project project.inlang"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.21.0",
		"@inlang/cli": "^2.18.1",
		"@playwright/test": "^1.50.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.8",
		"bits-ui": "1.3.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.4",
		"drizzle-seed": "^0.3.1",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"formsnap": "^2.0.0",
		"globals": "^16.0.0",
		"lucide-svelte": "^0.476.0",
		"prettier": "^3.5.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.20.4",
		"svelte-check": "^4.1.4",
		"sveltekit-superforms": "^2.23.1",
		"tailwind-merge": "^3.0.2",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^4.0.8",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.25.0",
		"vite": "^6.2.0",
		"vite-plugin-kit-routes": "^0.8.2",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@fontsource-variable/inter": "^5.1.1",
		"@fontsource-variable/roboto-mono": "^5.1.1",
		"@inlang/paraglide-sveltekit": "^0.15.5",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"drizzle-orm": "^0.39.3",
		"mailgun.js": "^11.1.0",
		"mode-watcher": "^0.5.1",
		"postgres": "^3.4.5"
	},
	"packageManager": "pnpm@10.5.0",
	"engines": {
		"node": "^22.14.0"
	}
}
