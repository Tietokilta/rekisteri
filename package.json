{
	"name": "rekisteri",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n vite,i18n -c cyan,magenta \"vite dev\" \"pnpm i18n:watch\"",
		"build": "pnpm i18n:generate && vite build",
		"flake:upgrade": "docker run --rm -v $(pwd):/app -w /app nixpkgs/nix-flakes sh -c \"git config --global --add safe.directory /app && nix flake update\"",
		"flake:build": "docker run --rm -v $(pwd):/app -w /app nixpkgs/nix-flakes sh -c \"git config --global --add safe.directory /app && nix build .#docker\"",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test",
		"test": "pnpm run test:e2e",
		"db:start": "docker compose up",
		"db:clear": "docker compose down -v",
		"db:reset": "pnpm db:clear && pnpm db:start -d --wait && pnpm db:migrate && pnpm db:seed",
		"db:seed": "tsx --env-file=.env src/lib/server/db/seed.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"i18n:generate": "typesafe-i18n --no-watch",
		"i18n:watch": "typesafe-i18n",
		"typesafe-i18n": "typesafe-i18n"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.552.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.16",
		"@tanstack/table-core": "^8.21.3",
		"@types/node": "^24.9.2",
		"@types/node-cron": "^3.0.11",
		"@types/papaparse": "^5.3.16",
		"bits-ui": "^2.14.2",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.6",
		"drizzle-seed": "^0.3.1",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"formsnap": "^2.0.1",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte-check": "^4.3.3",
		"sveltekit-superforms": "^2.28.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.16",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "npm:rolldown-vite@7.1.20",
		"vite-plugin-kit-routes": "^1.0.2",
		"zod": "^4.1.12"
	},
	"dependencies": {
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/roboto-mono": "^5.2.8",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"drizzle-orm": "^0.44.7",
		"mailgun.js": "^12.1.1",
		"mode-watcher": "^1.1.0",
		"node-cron": "^4.2.1",
		"papaparse": "^5.5.3",
		"postgres": "^3.4.7",
		"stripe": "^18.5.0",
		"svelte": "^5.43.2",
		"typesafe-i18n": "^5.26.2"
	},
	"packageManager": "pnpm@10.16.1",
	"engines": {
		"node": "^24.5.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		],
		"overrides": {
			"vite": "npm:rolldown-vite@7.1.20",
			"axios": "^1.13.0"
		}
	}
}
